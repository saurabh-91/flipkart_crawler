from scrapy.item import Item, Field
import scrapy


class CrawlingItem(scrapy.item):
    ind_id=scrapy.Field()
    name=scrapy.Field()
    price=scrapy.Field()
    link = scrapy.Field()

class FlipkartItem(CrawlingItem):
    # define the fields for your item here like:
    # name = scrapy.Field()
    #pass
    ind_id=scrapy.Field()
    name=scrapy.Field()
    details=scrapy.Field()
    price=scrapy.Field()
    link = scrapy.Field()
    i_link=scrapy.Field()
    desc = scrapy.Field()
    brand=scrapy.Field()
    title=scrapy.Field()
    feature=scrapy.Field()
    ram=scrapy.Field()
    os=scrapy.Field()
